<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../shared/header') %>
    <title>Mis Pedidos</title>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto py-10">
        <h1 class="text-4xl font-bold text-center mb-10">Mis Pedidos</h1>
        <ul class="space-y-8">
            <% orders.forEach(order => { %>
                <li class="bg-white shadow-lg rounded-lg p-6">
                    <h3 class="text-lg font-bold mb-4">Pedido #<%= order.id %></h3>
                    <ul class="space-y-4">
                        <% order.Products.forEach(product => { %>
                            <li class="flex items-center space-x-4">
                                <img src="<%= product.imageUrl %>" alt="<%= product.name %>" class="w-16 h-16 object-cover rounded-lg">
                                <span><%= product.name %> (Cantidad: <%= product.CartProduct.quantity %>)</span>
                            </li>
                        <% }) %>
                    </ul>
                    <p class="text-right font-semibold mt-4">Total: $<%= order.total %></p>
                </li>
            <% }) %>
        </ul>
    </div>
    <%- include('../shared/footer') %>
</body>
</html>
